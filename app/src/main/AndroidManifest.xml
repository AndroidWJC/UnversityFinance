<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hqj.universityfinance" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/aui_ic_finance2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme_NoTitle"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:screenOrientation="portrait"/>

        <activity android:name=".MainActivity" android:screenOrientation="portrait"/>

        <activity android:name=".home.NoticeListActivity"/>
        <activity android:name=".home.WebViewActivity"/>
        <activity android:name=".home.ProjectIntroduceActivity" />
        <activity android:name=".home.SimilarProjectNavigationActivity" />
        <activity android:name=".home.ApplyTableActivity" />
        <activity android:name=".home.EditTextActivity" />

        <activity android:name=".mine.SettingActivity" />
        <activity android:name=".mine.MyInfoActivity" />
        <activity android:name=".mine.MyApplyActivity" />
        <activity android:name=".mine.ApplyPreviewActivity" />
        <activity android:name=".mine.ModifyPasswordActivity"/>
        <activity android:name=".mine.AboutActivity"/>
        <activity android:name=".mine.MyMessageActivity" />
        <activity android:name=".mine.ChatActivity"/>

        <service android:name=".utils.SaveDataService"/>
    </application>

</manifest>