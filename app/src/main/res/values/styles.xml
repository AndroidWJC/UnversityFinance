<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_item_base">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:paddingStart">@dimen/list_item_margin</item>
        <item name="android:paddingEnd">@dimen/list_item_margin</item>
        <item name="android:paddingTop">@dimen/list_item_margin</item>
        <item name="android:paddingBottom">@dimen/list_item_margin</item>
    </style>

    <style name="list_item_arrow" parent="list_item_base">
        <item name="android:drawableEnd">@drawable/arrow</item>
        <item name="android:background">@drawable/list_item_bg_with_press</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/list_item_drawable_padding</item>
    </style>

    <style name="list_item_left_right" parent="list_item_base">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="list_item_up_down" parent="list_item_base">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>
