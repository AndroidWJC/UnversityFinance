<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_item">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:drawableEnd">@drawable/arrow</item>
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/list_item_drawable_padding</item>
        <item name="android:padding">@dimen/list_item_margin</item>
    </style>


</resources>
